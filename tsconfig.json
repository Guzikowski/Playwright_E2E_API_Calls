{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "declaration": true,
    "module": "commonjs",
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "public",
    "rootDir": "src",
    "watch": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
