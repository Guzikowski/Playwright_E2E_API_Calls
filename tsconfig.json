{
  "compilerOptions": {
    "baseUrl": "./src",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "es2022",
    "moduleResolution": "node",
    "lib": ["es2022", "dom"],
    "strict": true,
    "declaration": true,
    "module": "esnext",
    "rootDir": ".",
    "types": ["node", "playwright"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "no-inner-declarations": false,
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
